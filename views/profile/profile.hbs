<h1 class="userH1name">{{user.username}}</h1>
<div class="userContainer">

<div class="userImg">
<img src="{{user.picture}}" alt="">
</div>

<form class="userForm" action="/profile/update" method="post">
  <label for="username">Name: </label>
  <input type="text" name="username" id="username" value="{{user.username}}" >
<br>
  <label for="password">Password: </label>
  <input type="string" name="password" id="password" value="{{user.password}}" >
<br>
  <label for="email">Email: </label>
  <input type="email" name="email" id="email" value="{{user.email}}" required>
<br>
  <label for="picture">URL to picture: </label>
  <input type="text" name="picture" id="picture" value="{{user.picture}}" required>
<br>

<p>Choose your interests :</p>
    <select class="selectInterests" multiple="multiple" class="interests" id="interests" name="interests">
    <option value="Outdoor">Outdoor</option>
    <option value="Indoor">Indoor</option>
    <option value="Science">Science</option>
    </select>
  <br>


  <p>Choose your languages :</p>
  <select class="selectInterests" multiple="multiple" class="languages" id="languages" name="languages">
    <option value="Action">English</option>
    <option value="Comedies">French</option>
    <option value="Dramas">German</option>
  </select>

  <div class="profileB">
  <button class="big-btn " type="submit">Save changes</button>
  </div>
  
  <div class="profileB">
      <a class="big-btn "href="/profile/delete">Delete Profile</a>
  </div>
</form>

</div>
{{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}