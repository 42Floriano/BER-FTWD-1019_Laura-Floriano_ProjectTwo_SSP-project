<div class="container">
  <h2 class="h2Skills">Skills Overview</h2>

  <form action="/search" method="POST">
    <input class="input" type="text" placeholder="Piano lesson..." id="search-bar" name="skillSearch">
    <button class="find-btn" type="submit">Find</button>
  </form>
</div>

<table class="list-skills">
<tbody>
  {{#each skills }}
<tr class="tr">
    <td class="tdPicture "><dev class="imgSkills"><img src="{{picture}}" alt=""></dev></td>
    <td>{{ skillName }}</td>
    <td><a class="btn-skills" href="/details/{{_id}}">Info</a></td>
    <br>
  </tr>
  {{/each}}

  </tbody>
  </table>

