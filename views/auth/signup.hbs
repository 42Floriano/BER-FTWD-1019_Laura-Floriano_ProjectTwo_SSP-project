<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">
  <br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>

  <label for="email">email</label>
  <input id="email" type="email" name="email" placeholder="Your email">
  <br>

  <label for="picture">picture</label>
  <input id="picture" type="text" name="picture" placeholder="picture URL">

  <br>


  <p>Choose your interests :</p>
  <select multiple="multiple" class="interests" id="interests" name="interests">
    <option value="Outdoor">Outdoor</option>
    <option value="Indoor">Indoor</option>
    <option value="Science">Science</option>
  </select>
  <br>


  <p>Choose your languages :</p>
  <select multiple="multiple" class="languages" id="languages" name="languages">
    <option value="Action">English</option>
    <option value="Comedies">French</option>
    <option value="Dramas">German</option>
  </select>


  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button class="big-btn">Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>