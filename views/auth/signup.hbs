<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>

  <label for="email">email</label>
  <input id="email" type="email" name="email" placeholder="Your email">
  <br>


<p>Choose your interests :</p>

<div>
  <input type="checkbox" id="science" name="science"
         checked>
  <label for="science">Science</label>
</div>

<div>
  <input type="checkbox" id="outdoor" name="outdoor">
  <label for="outdoor">Outdoor</label>
</div>
<div>
  <input type="checkbox" id="indoor" name="indoor">
  <label for="indoor">Indoor</label>
</div>
  <br>

  <p>Choose your languages :</p>

<div>
  <input type="checkbox" id="english" name="english"
         checked>
  <label for="english">English</label>
</div>
<div>
  <input type="checkbox" id="german" name="german">
  <label for="german">German</label>
</div>
<div>
  <input type="checkbox" id="french" name="french">
  <label for="french">French</label>
</div>
  <br>

  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>

